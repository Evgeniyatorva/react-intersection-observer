{
  "name": "@researchgate/react-intersection-observer",
  "description": "React Component for the Intersection Observer API",
  "version": "0.1.0",
  "author": "Luis Merino <mail@luismerino.name>",
  "bugs": {
    "url": "https://github.com/researchgate/react-intersection-observer/issues"
  },
  "dependencies": {},
  "devDependencies": {
    "@researchgate/babel-preset-rg": "^1.0.0",
    "@storybook/addon-actions": "^3.1.9",
    "@storybook/addon-info": "^3.2.0",
    "@storybook/addon-options": "^3.1.6",
    "@storybook/react": "^3.1.9",
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.3",
    "cross-env": "^5.0.5",
    "css-loader": "^0.28.4",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-import": "^2.3.0",
    "husky": "^0.14.3",
    "intersection-observer": "^0.4.0",
    "invariant": "^2.2.2",
    "jest": "^20.0.4",
    "lint-staged": "^4.0.2",
    "prettier": "^1.5.3",
    "prop-types": "^15.5.10 || ^16.0.0",
    "react": "^15.4.0 || ^16.0.0",
    "react-dom": "^15.4.0 || ^16.0.0",
    "react-test-renderer": "^15.6.1",
    "regenerator-runtime": "^0.10.5",
    "style-loader": "^0.18.2"
  },
  "files": [
    "lib"
  ],
  "homepage": "https://github.com/researchgate/react-intersection-observer#readme",
  "keywords": [
    "Intersection",
    "Observer",
    "react",
    "component",
    "viewport",
    "visible",
    "invisible",
    "researchgate"
  ],
  "license": "MIT",
  "lint-staged": {
    "*.js": [
      "prettier --print-width 120 --trailing-comma es5 --single-quote --write",
      "eslint --fix",
      "git add"
    ]
  },
  "main": "lib/js/index.js",
  "module": "lib/es/index.js",
  "peerDependencies": {
    "prop-types": "^15.5.10 || ^16.0.0",
    "react": "^15.4.0 || ^16.0.0",
    "react-dom": "^15.4.0 || ^16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/researchgate/react-intersection-observer"
  },
  "scripts": {
    "build": "rm -rf lib && npm run build:js && npm run build:es",
    "build:js": "cross-env BABEL_ENV=production BABEL_OUTPUT=cjs babel src --out-dir lib/js",
    "build:es": "cross-env BABEL_ENV=production BABEL_OUTPUT=esm babel src --out-dir lib/es",
    "build:storybook": "build-storybook --output-dir docs",
    "format": "prettier '{src,stories,test}/**/*.js' --single-quote --trailing-comma es5 --print-width 120",
    "lint": "eslint {src,stories,test}/.",
    "precommit": "lint-staged",
    "postcommit": "git reset",
    "prepublish": "npm run build",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "test": "jest"
  }
}
